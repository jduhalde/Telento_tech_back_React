# ===========================================
# CONFIGURACIÓN DE DJANGO - COMIDA AL PASO
# ===========================================
# Copiar este archivo como .env y ajustar los valores

# ---------------------------
# Django Settings
# ---------------------------
SECRET_KEY=cambiar-por-una-clave-secreta-segura-en-produccion
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ---------------------------
# Database (elegir uno: postgres, mysql, sqlite)
# ---------------------------
DB_ENGINE=postgres

# PostgreSQL (para Docker)
POSTGRES_DB=comidadb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# MySQL (para Railway u otro)
# MYSQLDATABASE=railway
# MYSQLUSER=root
# MYSQLPASSWORD=
# MYSQLHOST=localhost
# MYSQLPORT=3306

# ---------------------------
# JWT Settings (tiempos en minutos)
# ---------------------------
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ---------------------------
# CORS Settings
# ---------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# ---------------------------
# Security Headers (para produccion usar True)
# ---------------------------
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ---------------------------
# Logging
# ---------------------------
DJANGO_LOG_LEVEL=INFO
API_LOG_LEVEL=DEBUG
```

